---
import Layout from "./Layout.astro"

export type Props = {
  title: string
  description: string
  class?: string
  backButtonHref?: string
}

const {
  title,
  description,
  class: className = "",
  backButtonHref = "/",
  ...rest
} = Astro.props
---

<Layout title={title} description={description}>
  <main class={`container ${className}`} {...rest}>
    <a href={backButtonHref} class="back">&larr;</a>
    <slot />
  </main>
</Layout>

<style>
  .container {
    margin: 40px auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 300px;
  }

  .back {
    color: #fff;
    font-size: 2rem;
    align-self: flex-start;
    margin-bottom: 10px;
  }

  @media screen and (max-width: 600px) {
    .container {
      margin: 10px auto;
    }
  }
</style>
