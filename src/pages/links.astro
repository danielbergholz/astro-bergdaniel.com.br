---
import Link from "../components/Link.astro"
import MobileLayout from "../layouts/MobileLayout.astro"
---

<MobileLayout
  title="Links | Daniel Berg"
  description="Links from YouTube, Twitter, Blog, Discord and GitHub"
  class="container"
>
  <img src="/assets/berg.png" alt="Berg logo" class="image" />

  <Link
    title="TechSchool"
    href="https://techschool.dev/"
    backgroundColor="#59C28E"
    iconSrc="/assets/thunder.svg"
    target="_blank"
    rel="noopener"
  />

  <Link
    href="/support-me"
    title="Support my work"
    backgroundColor="#e23dcc"
    iconSrc="/assets/heart.svg"
  />

  <Link
    href="https://twitter.com/danielberg_"
    title="Twitter"
    backgroundColor="#3dace2"
    iconSrc="/assets/twitter.svg"
    target="_blank"
    rel="noopener"
  />

  <Link
    href="https://dev.to/danielbergholz"
    title="Blog"
    color="#000"
    backgroundColor="#fff"
    iconSrc="/assets/dev_to.svg"
    target="_blank"
    rel="noopener"
  />

  <Link
    href="https://www.youtube.com/c/DanielBergholz"
    title="YouTube"
    backgroundColor="#C71D1F"
    iconSrc="/assets/youtube.svg"
    target="_blank"
    rel="noopener"
  />

  <Link
    href="https://github.com/danielbergholz"
    title="GitHub"
    iconSrc="/assets/github.svg"
    target="_blank"
    rel="noopener"
  />
</MobileLayout>

<style>
  .container {
    gap: 20px;
  }

  .image {
    border-radius: 10px;
    margin-bottom: 30px;
  }
</style>
