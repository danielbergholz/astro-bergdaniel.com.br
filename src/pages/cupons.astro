---
import Link from '../components/Link.astro'
import MobileLayout from '../layouts/MobileLayout.astro'
---

<MobileLayout
  title="Cupons | Daniel Berg"
  description="Cupons de desconto e parcerias"
  backButtonHref="/links"
  className="container"
>
  <h1 class="title">Cupons de Desconto</h1>
  <Link
    href="https://husky.io?ref=nda3mdc"
    title="Husky"
    backgroundColor="#E74E4A"
    iconSrc="/assets/husky.svg"
    target="_blank"
    rel="noopener"
  />

  <Link
    href="https://wise.com/invite/u/danielgobbib"
    title="Wise"
    backgroundColor="#83C35A"
    iconSrc="/assets/wise.svg"
    target="_blank"
    rel="noopener"
  />
</MobileLayout>

<style>
  .container {
    gap: 20px;
  }

  .title {
    font-size: 1.8rem;
    font-weight: 800;
    margin-bottom: 30px;
  }
</style>
